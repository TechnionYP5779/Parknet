<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/locationLabel"
        android:text="Location:"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/locationLabel"
        android:id="@+id/address"
        android:text="Namir 10, Tel Aviv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/locationLabel" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@id/locationLabel"
        android:id="@+id/priceLabel"
        android:text="Price per hour:"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="20.25 NIS"
        android:id="@+id/pricePerHour"
        android:layout_below="@id/address"
        android:layout_toRightOf="@+id/priceLabel"
        android:layout_toEndOf="@id/priceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:text="Available from .... to ...."
        android:layout_below="@id/priceLabel"
        android:id="@+id/availability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="5dp"
        android:layout_below="@+id/availability"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>